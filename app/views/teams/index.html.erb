<h1>Listing teams</h1>

<table>
  <tr>
    <th>Number</th>
    <th>Name</th>
    <th></th>
    <th></th>
  </tr>

<% @teams.each do |team| %>
  <tr>
    <td><%= team.number %></td>
    <td><%= link_to team.name, competition_team_path(@competition, team) %></td>
    <td><%= link_to 'Edit', edit_competition_team_path(@competition, team) %></td>
    <td><%= link_to 'Remove', [team.competition, team], confirm: 'Are you sure?',  method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Add Team', new_competition_team_path %>
